          "content": "This block determines the position of the collection image."
        },
        {
            "type": "select",
            "id": "collection_image_size",
            "label": {
                "en": "Collection image size",
                "de": "Größe des Kollektionsbilds",
                "es": "Tamaño de la imagen de la colección",
                "fr": "Taille de l'image de la collection",
                "pt-PT": "Tamanho da imagem da coleção"
            },
            "options": [
              {
                "value": "20vh",
                "label": {
                    "en": "Small",
                    "de": "Klein",
                    "es": "Pequeño",
                    "fr": "Petite",
                    "pt-PT": "Pequeno"
                }
              },
              {
                "value": "30vh",
                "label": {
                    "en": "Medium",
                    "de": "Mittel",
                    "es": "Mediano",
                    "fr": "Moyenne",
                    "pt-PT": "Médio"
                }
              },
              {
                "value": "40vh",
                "label": {
                    "en": "Large",
                    "de": "Groß",
                    "es": "Grande",
                    "fr": "Grande",
                    "pt-PT": "Grande"
                }
              },
              {
                "value": "original",
                "label": {
                    "en": "Original",
                    "de": "Original",
                    "es": "Original",
                    "fr": "D'origine",
                    "pt-PT": "Original"
                }
              }
            ],
            "default": "original"
        }
      ]
