        "limit": 1,
        "settings": [
          {
              "type": "paragraph",
              "content": "This block determines the position of the collection title."
          }
        ]
    },
    {
        "name": "Collection description",
        "type": "collection-description",
        "limit": 1,
        "settings": [
          {
              "type": "paragraph",
              "content": "This block determines the position of the collection description."
          }
        ]
    }
  ]
