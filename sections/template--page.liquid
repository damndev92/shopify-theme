<style>
	.site-header__logo .site-header__logo-image img {
		display: none;
	}

	{% if section.settings.hide_header == true %}
	#shopify-section-announcement-bar,
	.header-wrapper .header-menu-wrapper {
		display: none !important;
	}

	.header-wrapper .header-icons.cart-link ul li:not(:last-of-type) {
		display: none !important;
	}
	{% endif %}
	{% if section.settings.hide_default_content == true %}
	article#{{ page.handle }} {
		display: none !important;
	}
	{% endif %}
	{% if section.settings.background_image != blank %}
	main#main {
		background-image: url("{{ section.settings.background_image | img_url: "1920x1080" }}");
		background-repeat: no-repeat;
		background-size: cover;
	}
	{% endif %}

	.partners-logo {
		max-width: 1140px;
		width: 100%;
		height: 62px;
		display: flex;
		top: 0;
		position: absolute;
		margin: 0 auto;
		left: 0;
		right: 0;
		align-items: center;
		justify-content: {{ section.settings.alignment }};
	}

	.qview-button-wrapper .qview-button {
		width: 100% !important;
		height: 100% !important;
		left: 0 !important;
		top: 0 !important;
		background-color: transparent !important;;
		background: transparent !important;
		border-radius: 0 !important;
	}

	.qview-button-wrapper .qview-button:active,
	.qview-button-wrapper .qview-button:focus,
	.qview-button-wrapper .qview-button:hover {
		background: transparent !important;
	}

	.qview-button-wrapper .qview-button:active .qview-button-idle,
	.qview-button-wrapper .qview-button:focus .qview-button-idle,
	.qview-button-wrapper .qview-button:hover .qview-button-idle {
		display: flex;
	}

	.qview-button-wrapper .qview-button .qview-button-idle {
		display: none;
		background: #000;
		width: 36px;
		height: 36px;
		border-radius: 5px;
	}

	.qview-button-wrapper .qview-button .qview-button-openning {
		background: #000;
		width: 36px;
		height: 36px;
		border-radius: 5px;
	}
</style>
{% if section.settings.logo != blank %}
	{% assign logo = section.settings.logo | img_url: '250x100' %}
	<a style="margin-bottom: {{ logo.height }}px" href="{{ section.settings.url }}" class="partners-logo"><img style="width: auto; height: 50px" src="{{ logo }}" height="50" width="250"></a>
{% else %}
	<div class="partners-logo"></div>
{% endif %}
<article id="{{page.handle}}" class="page entry container">
	<header>
		<div class="title-bar custom-font">
			<h1 class="main-heading">{{ page.title }}</h1>
		</div>
	</header>
	<section class="entry-content">
		{{ page.content }}
	</section>
</article>

{% schema %}
{
	"settings": [
		{
			"type": "checkbox",
			"id": "hide_header",
			"label": "Hide header",
			"info": "Hide site logo, navigation, search and my account icon"
		},
		{
		"type": "checkbox",
		"id": "hide_default_content",
		"label": "Hide default content"
		},
		{
			"type": "image_picker",
			"id": "background_image",
			"label": "Background image"
		},
		{
			"type": "image_picker",
			"id": "logo",
			"label": "Logo"
		},
		{
			"type": "select",
			"id": "alignment",
			"label": "Logo alignment",
			"default": "center",
			"options": [
				{
					"value": "center",
					"label": "center"
				},
				{
					"value": "start",
					"label": "left"
				}
			]
		},
		{
			"type": "text",
			"id": "url",
			"label": "Partner url"
		}
	]
}
{% endschema %}