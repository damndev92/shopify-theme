{% render 'header-white-label',
	logo: section.settings.logo,
	logo_alignment: section.settings.alignment,
	url: section.settings.url
%}

<style>
	{% if section.settings.hide_default_content == true %}
		article#{{ page.handle }} {
			display: none !important;
		}
		{% endif %}
		{% if section.settings.background_image != blank %}
		main#main {
			background-image: url("{{ section.settings.background_image | img_url: "1920x1080" }}");
			background-repeat: no-repeat;
			background-size: cover;
		}
	{% endif %}
</style>

<article id="{{page.handle}}" class="page entry container">
	<header>
		<div class="title-bar custom-font">
			<h1 class="main-heading">{{ page.title }}</h1>
		</div>
	</header>
	<section class="entry-content">
		{{ page.content }}
	</section>
</article>

{% schema %}
{
	"settings": [
		{
		"type": "checkbox",
		"id": "white_label",
		"label": "White label page"
		},
		{
			"type": "checkbox",
			"id": "hide_header",
			"label": "Hide header",
			"info": "Hide site logo, navigation, search and my account icon"
		},
		{
		"type": "checkbox",
		"id": "hide_default_content",
		"label": "Hide default content"
		},
		{
			"type": "image_picker",
			"id": "background_image",
			"label": "Background image"
		},
		{
			"type": "image_picker",
			"id": "logo",
			"label": "Logo"
		},
		{
			"type": "select",
			"id": "alignment",
			"label": "Logo alignment",
			"default": "center",
			"options": [
				{
					"value": "center",
					"label": "center"
				},
				{
					"value": "start",
					"label": "left"
				}
			]
		},
		{
			"type": "url",
			"id": "url",
			"label": "Partner url"
		}
	]
}
{% endschema %}