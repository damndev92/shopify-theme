{
  "sections": {
    "main": {
      "type": "template--product",
      "blocks": {
        "product-title": {
          "type": "product-title",
          "settings": {
          }
        },
        "68938b63-510b-4dfd-ae6b-1b97974d28dc": {
          "type": "vendor-sku",
          "settings": {
            "show_vendor": true,
            "show_sku": false
          }
        },
        "product-price": {
          "type": "product-price",
          "settings": {
            "show_discount": "value",
            "tax_included": false,
            "shipping_policy": true
          }
        },
        "374f8622-6038-471b-971d-e3c84c6f38dc": {
          "type": "product-description",
          "settings": {
          }
        },
        "quantity-selector": {
          "type": "quantity-selector",
          "settings": {
          }
        },
        "product-options": {
          "type": "product-options",
          "settings": {
            "show_variant_labels": true,
            "hide_out_of_stock": true,
            "pick_an_option": false
          }
        },
        "payment-buttons": {
          "type": "payment-buttons",
          "settings": {
            "show_smart_checkout": true
          }
        },
        "country-of-origin": {
          "type": "country-of-origin",
          "settings": {
            "text": "{{ product.metafields.custom.country_of_origin.value }}"
          }
        },
        "delivery-and-returns": {
          "type": "delivery-and-returns",
          "settings": {
            "text": "{{ product.metafields.custom.product_delivery_returns.value }}"
          }
        },
        "product-dimensions": {
          "type": "product-dimensions",
          "settings": {
            "text": "{{ product.metafields.custom.product_dimensions.value }}"
          }
        },
        "product-specifications": {
          "type": "product-specifications",
          "settings": {
            "text": "{{ product.metafields.custom.product_specifications.value }}"
          }
        },
        "days-to-deliver": {
          "type": "days-to-deliver",
          "settings": {
            "text": "{{ product.metafields.custom.days_to_deliver.value }}"
          }
        }
      },
      "block_order": [
        "product-title",
        "68938b63-510b-4dfd-ae6b-1b97974d28dc",
        "product-price",
        "374f8622-6038-471b-971d-e3c84c6f38dc",
        "quantity-selector",
        "product-options",
        "payment-buttons"
      ],
      "settings": {
        "show_out_of_stock_email": true,
        "form_position": "below-payment-buttons",
        "size_guide_link": "",
        "size_guide_message": "What's my size?",
        "size_guide_variant": "Size",
        "image_size": "large",
        "thumbnail_position": "below",
        "enable_zoom": false,
        "enable_video_loop": false
      }
    },
    "product-recommendations": {
      "type": "template--product--recommendations",
      "settings": {
        "show_product_recommendations": true,
        "product_recommendations_heading": "You may also like"
      }
    }
  },
  "order": [
    "main",
    "product-recommendations"
  ]
}
{% liquid
assign default_number_of_days = 5

if block.settings.days-to-deliver
assign daysToDeliver = block.settings.days-to-deliver
else
assign daysToDeliver = default_number_of_days
endif
%}